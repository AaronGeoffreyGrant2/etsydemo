<p id="notice"><%= notice %></p>

<h1>Platforms</h1>

<table>
  <thead>
    <tr>
      <th>Game</th>
      <th>User</th>
      <th>Player</th>
      <th>Coin</th>
      <th>Lava</th>
      <th>Enemy 1</th>
      <th>Enemy 2</th>
      <th>Enemy 3</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @platforms.each do |platform| %>
      <tr>
        <td><%= platform.Game %></td>
        <td><%= platform.user %></td>
        <td><%= platform.player %></td>
        <td><%= platform.coin %></td>
        <td><%= platform.lava %></td>
        <td><%= platform.enemy_1 %></td>
        <td><%= platform.enemy_2 %></td>
        <td><%= platform.enemy_3 %></td>
        <td><%= link_to 'Show', platform %></td>
        <td><%= link_to 'Edit', edit_platform_path(platform) %></td>
        <td><%= link_to 'Destroy', platform, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Platform', new_platform_path %>
